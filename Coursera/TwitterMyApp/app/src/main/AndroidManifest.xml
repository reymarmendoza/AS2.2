<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="corp.kingsea.reymar.twittermyapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TwitterClientApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <!-- elimino el actionbar en la linea anterior, esta conectado a styles.xml -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="e67d6ee6233088ccb2bff8d6a7510e2bc3e82d7e" />

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.ui.MainActivity"></activity>
    </application>

</manifest>